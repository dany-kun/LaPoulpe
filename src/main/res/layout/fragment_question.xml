<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.smabo.dany_kun.lapoulpe.QuestionFragmentBoolean">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.smabo.dany_kun.lapoulpe.views.QuizzCardView
            android:id="@+id/image_quizz_left"
            style="@style/QuizzCard" />

        <com.smabo.dany_kun.lapoulpe.views.QuizzCardView
            android:id="@+id/image_quizz_right"
            style="@style/QuizzCard" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageview_go_to_next"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="centerCrop"
        android:src="@drawable/octopus_arrow"
        android:visibility="gone" />


</FrameLayout>
